@article{DBLP:journals/iot/MarshoodullaS23,
	author = {Syeda Zeenat Marshoodulla and
                  Goutam Saha},
	title = {An approach towards removal of data heterogeneity in SDN-based IoT
                  framework},
	journal = {Internet Things},
	volume = {22},
	pages = {100763},
	year = {2023},
	url = {https://doi.org/10.1016/j.iot.2023.100763},
