	journal = {{IEEE} Trans. Wirel. Commun.},
	volume = {23},
	number = {10},
	pages = {15367--15379},
	year = {2024},
	url = {https://doi.org/10.1109/TWC.2024.3429194},
	doi = {10.1109/TWC.2024.3429194},
