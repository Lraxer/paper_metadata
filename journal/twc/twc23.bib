	title = {Joint User Association, Interference Cancellation, and Power Control
                  for Multi-IRS Assisted {UAV} Communications},
	journal = {{IEEE} Trans. Wirel. Commun.},
	volume = {23},
	number = {10},
	pages = {13408--13423},
