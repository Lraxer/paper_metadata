	journal = {{IEEE} Trans. Mob. Comput.},
	volume = {21},
	number = {1},
	pages = {321--331},
	year = {2022},
	url = {https://doi.org/10.1109/TMC.2020.3007456},
	doi = {10.1109/TMC.2020.3007456},
