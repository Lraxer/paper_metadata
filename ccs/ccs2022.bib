	title = {Membership Inference Attacks by Exploiting Loss Trajectory},
	booktitle = {Proceedings of the 2022 {ACM} {SIGSAC} Conference on Computer and
                  Communications Security, {CCS} 2022, Los Angeles, CA, USA, November
                  7-11, 2022},
	pages = {2085--2098},
