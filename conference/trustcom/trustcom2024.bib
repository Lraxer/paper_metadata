	bibsource = {dblp computer science bibliography, https://dblp.org},
	abstract = {Blockchain technology has revolutionized contractual processes, enhancing efficiency and trust through smart contracts. Ethereum, as a pioneer in this domain, offers a platform for decentralized applications but is challenged by the immutability of smart contracts, which makes upgrades cumbersome. Existing design patterns, while addressing upgrad-ability, introduce complexity, increased development effort, and higher gas costs, thus limiting their effectiveness. In response, we introduce FlexiContracts, an innovative scheme that reimagines the evolution of smart contracts on Ethereum. By enabling secure, in-place upgrades without losing historical data, Flexi-Contracts surpasses existing approaches, introducing a previously unexplored path in smart contract evolution. Its streamlined design transcends the limitations of current design patterns by simplifying smart contract development, eliminating the need for extensive upfront planning, and significantly reducing the complexity of the design process. This advancement fosters an environment for continuous improvement and adaptation to new requirements, redefining the possibilities for dynamic, upgradable smart contracts.}
}


@inproceedings{DBLP:conf/trustcom/ZhengZC24,
	author = {Haibin Zheng and
                  Tianxin Zhang and
                  Jinyin Chen},
	title = {Fedfair: {A} Debiasing Algorithm for Federated Learning Systems},
	booktitle = {23rd {IEEE} International Conference on Trust, Security and Privacy
                  in Computing and Communications, TrustCom 2024, Sanya, China, December
                  17-21, 2024},
	pages = {2322--2326},
	publisher = {{IEEE}},
	year = {2024},
	url = {https://doi.org/10.1109/TrustCom63139.2024.00320},
	doi = {10.1109/TRUSTCOM63139.2024.00320},
	timestamp = {Thu, 24 Apr 2025 16:44:36 +0200},
	biburl = {https://dblp.org/rec/conf/trustcom/ZhengZC24.bib},
	bibsource = {dblp computer science bibliography, https://dblp.org},
	abstract = {Federated learning has achieved remarkable results in a variety of decision-making tasks, but may create models that are biased toward some groups due to the labeling bias and distributional differences of client data. Therefore, exploring how to reduce decision-making bias is an urgent problem for future large-scale deployment of federated learning systems into society. The most effective approaches to enhance the fairness of federated learning include preprocessing, in-processing, and post-processing algorithms, which improve the fairness and credibility of the models while preserving privacy. However, existing debiasing algorithms are still limited in three aspects: poor fairness enhancement of the global model, high impact on the performance of the main task, and inconsistent evaluation metrics. Motivated by the challenge of group fairness in federated learning, we propose Fedfair, a debiasing algorithm for federated learning systems that differs from previous work in several key aspects: (1) it requires clients to upload a small amount of anonymized data to the server, which allows most centralized debiasing algorithms that rely on data to be applied to federated learning; (2) by mapping the implicit relationship between the model and the group bias, it fine-tunes the global model to reduce the group bias, thus weakening the impact on the model's performance on the main task; (3) it applies a unified fairness evaluation metric, which reasonably and intuitively demonstrates the advantages of debiasing compared to various other algorithms. Experiments verify that compared with other federated learning debiasing algorithms, Fedfair is more efficient, the debiasing effect is more obvious, and the impact on the performance of federated learning models is weaker.}
}


@inproceedings{DBLP:conf/trustcom/SunS24,
	author = {Yifan Sun and
