	biburl = {https://dblp.org/rec/conf/trustcom/ZhouZYWML24.bib},
	bibsource = {dblp computer science bibliography, https://dblp.org},
	abstract = {The increasing complexity of network environments and evolving attack methods pose significant challenges to enhancing security and reliability. To address these issues, this paper presents the Dynamic Heterogeneous Redundancy and Threat-aware Framework (DHRT), a resilient Web server framework designed to counter common-mode escape. By integrating traditional defense strategies with endogenous security mechanisms through the Adaptive Defense Selection Algorithm (ADSA), DHRT significantly strengthens system defenses. Experiments demonstrate defense success rates of 95.36%, 97.81%, and 95.21% against DDoS, SQL injection, and XSS attacks, respectively, while maintaining balanced response time and throughput under high concurrency. The framework provides innovative solutions for building resilient digital ecosystems.}
}


@inproceedings{DBLP:conf/trustcom/Soper0FJT24,
	author = {Jacob Soper and
