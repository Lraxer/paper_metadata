	biburl = {https://dblp.org/rec/conf/trustcom/XiaoLXLX24.bib},
	bibsource = {dblp computer science bibliography, https://dblp.org},
	abstract = {Graph representation is an invaluable tool in digital forensics, offering the flexibility to depict diverse objects and relationships. This capability empowers investigators to model and analyze a broad spectrum of scenarios. This paper focuses on Digital Forensic Knowledge Graphs (DFKGs), an extension of the STIX standard language designed for digital forensic cases. DFKGs tailor STIX objects (nodes) and relationships (edges) to enhance their relevance in the digital forensic context. However, building the DFKGs of real-world cases is error-prone. Common issues include inconsistencies where edges fail to align with attributes in associated nodes. This paper introduces a machine learning-based approach to address the problem of relationship inconsistency in real-world DFKGs. The proposed method utilizes a Graph Neural Network (GNN) model trained on a case repository to evaluate relationship consistency in new cases. We evaluated the model with the DFKGs of 10 real-world cases, containing diverse inconsistent relationships. The accuracy scores range from 68% to 84% and the F1 scores from 78% to 89%. The results indicate that the approach can be promising to improve the quality of DFKGs.}
}


@inproceedings{DBLP:conf/trustcom/Zhang0LLGCC24,
	author = {Yuheng Zhang and
