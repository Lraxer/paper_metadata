	biburl = {https://dblp.org/rec/conf/trustcom/LengYLLZH24.bib},
	bibsource = {dblp computer science bibliography, https://dblp.org},
	abstract = {With the increasing prevalence of underground cybercrime communities in the cyber ecosystem, identifying illegal SIM card vendors can reveal their organizational structure and expose their behavioral patterns, allowing for early warning and improving countermeasures’ efficiency. With the rapid development of machine learning and deep learning technologies, natural language processing techniques have been widely applied. When identifying card vendors, most research has been limited to representing text features from a single dimension and data source. Therefore, we proposed a method to discover card vendor cliques based on multi-source data. The process includes: first, analyzing and constructing the card vendor ontology model to store data from the group chat, forum, and dialogue. Second, extract the attributes of the card vendor entities based on the rotary positional encoding with the BiLSTM model, building the intelligence database. Third, the intelligence database is embedded into vectors based on the GNN and autoencoder for further card vendor cliques discovery. After constructing the intelligence database consisting of 3,792 nodes and 25,602 relationships, our method successfully discovered 12 card vendor cliques, which demonstrates the effectiveness of the method.}
}


@inproceedings{DBLP:conf/trustcom/JiangLWH24,
	author = {Hao Jiang and
                  Haiwei Lai and
                  Si Wu and
                  Baojian Hua},
	title = {JasFree: Grammar-free Program Analysis for JavaScript Bytecode},
	booktitle = {23rd {IEEE} International Conference on Trust, Security and Privacy
                  in Computing and Communications, TrustCom 2024, Sanya, China, December
                  17-21, 2024},
	pages = {326--337},
	publisher = {{IEEE}},
