@inproceedings{DBLP:conf/trustcom/HeZ24,
	author = {Zilong He and
                  Hua Zhang},
	title = {Learning Robust and Repeatable Physical Camouflage for Aerial Object
                  Detectors},
	booktitle = {23rd {IEEE} International Conference on Trust, Security and Privacy
                  in Computing and Communications, TrustCom 2024, Sanya, China, December
                  17-21, 2024},
	pages = {1709--1718},
	publisher = {{IEEE}},
	year = {2024},
	url = {https://doi.org/10.1109/TrustCom63139.2024.00235},
	doi = {10.1109/TRUSTCOM63139.2024.00235},
	timestamp = {Thu, 24 Apr 2025 16:44:36 +0200},
	biburl = {https://dblp.org/rec/conf/trustcom/HeZ24.bib},
	bibsource = {dblp computer science bibliography, https://dblp.org},
	abstract = {Physical attacks are gaining recognition as essential tools for evaluating the security of AI systems in real-world applications. To implement these attacks, adversarial camouflage is meticulously crafted to envelop the entire surface of the target object. Existing attack methods either rely on fixed-view datasets to apply camouflage to specific surfaces of the target or require a complete 3D model of the target to achieve full coverage. However, the former approach limits the effectiveness of the camouflage across multiple viewpoints, while the latter creates a strong dependency between the camouflage and the target’s surface, making it difficult to generate easily applicable, image-like camouflage patterns.To generate reproducible and effective camouflage, we segment the target into a grid and select regions based on the detection model’s attribution map for the current image. Camouflage is then randomly applied to these grid sections, ensuring that any part effectively obscures various structures of the target. To enhance effectiveness in the physical domain and within the environment, we performed a primary color analysis of the background to identify representative environmental colors, constraining the color space of the camouflage to match these colors and improving its transparency and blending capability. By combining these perturbations, we developed a viewpoint-independent camouflage. Extensive testing on the VisDrone and DAS datasets demonstrates that our method achieves the highest attack success rates (ASR), with a maximum detection ASR of 66.91% on the VisDrone dataset, and a maximum detection ASR of 80.16% on the DAS dataset. We achieved a maximum ASR of 79.47% in the physical domain as well.}
}


@inproceedings{DBLP:conf/trustcom/DengDJWY0L24,
	author = {Haiyu Deng and
