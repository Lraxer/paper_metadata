	biburl = {https://dblp.org/rec/conf/trustcom/ZhangSH24.bib},
	bibsource = {dblp computer science bibliography, https://dblp.org},
	abstract = {Advanced Persistent Threat (APT) is a highly targeted, complex, and long-term attack targeting specific organizations or individuals, aimed at stealing sensitive data or disrupting operations. APT is covert, difficult to detect, and may lead to serious economic losses, intelligence leaks, business interruptions, and even affect national security and political stability. Due to the concealment and complexity of APT attacks, coupled with their long duration, current detection solutions face challenges such as high detection difficulty and low accuracy. To address this issue, this paper innovatively proposes a high-precision APT attack detection model CNN-KOA-BiGRU based on Convolutional Neural Network (CNN), BiGRU deep learning network, and Kepler Optimization Algorithm. The model first uses CNN to extract spatial features from network traffic data, and then uses BiGRU to capture temporal dependencies and long-term patterns, forming comprehensive temporal features. Then, KOA optimized the structure of BiGRU, achieving optimal feature weights and improving detection accuracy. In addition, this paper also combines sampling techniques (SMOTE) and Tomek linking to eliminate classification bias caused by imbalanced datasets. The experimental results on the CSE-CIC-IDS2018 dataset show that the average precision of CNN-KOA-BiGRU is 97.03%, 5.61% higher than CNN, 0.82% higher than CNN-BiGRU, and 1.85% higher than GCN.}
}


@inproceedings{DBLP:conf/trustcom/ZhangTBH0L24,
	author = {Chengming Zhang and
                  Bo Tang and
                  Yifan Bian and
                  Bingtao Han and
                  Yongcheng Wang and
                  Tao Liu},
	title = {Efficient and Secure Federated Learning via Enhanced Quantization
                  and Encryption},
	booktitle = {23rd {IEEE} International Conference on Trust, Security and Privacy
