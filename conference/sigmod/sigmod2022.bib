	title = {T-LevelIndex: Towards Efficient Query Processing in Continuous Preference
                  Space},
	booktitle = {{SIGMOD} '22: International Conference on Management of Data, Philadelphia,
                  PA, USA, June 12 - 17, 2022},
	pages = {2149--2162},
	publisher = {{ACM}},
