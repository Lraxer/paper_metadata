	booktitle = {{SIGMOD} '22: International Conference on Management of Data, Philadelphia,
                  PA, USA, June 12 - 17, 2022},
	pages = {2429--2432},
	publisher = {{ACM}},
	year = {2022},
	url = {https://doi.org/10.1145/3514221.3520169},
	doi = {10.1145/3514221.3520169},
