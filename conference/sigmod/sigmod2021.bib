	title = {Query-by-Sketch: Scaling Shortest Path Graph Queries on Very Large
                  Networks},
	booktitle = {{SIGMOD} '21: International Conference on Management of Data, Virtual
                  Event, China, June 20-25, 2021},
	pages = {1946--1958},
	publisher = {{ACM}},
