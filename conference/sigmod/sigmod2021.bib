	title = {Fast Parallel Algorithms for Euclidean Minimum Spanning Tree and Hierarchical
                  Spatial Clustering},
	booktitle = {{SIGMOD} '21: International Conference on Management of Data, Virtual
                  Event, China, June 20-25, 2021},
	pages = {1982--1995},
	publisher = {{ACM}},
