	title = {Minimizing the Regret of an Influence Provider},
	booktitle = {{SIGMOD} '21: International Conference on Management of Data, Virtual
                  Event, China, June 20-25, 2021},
	pages = {2115--2127},
	publisher = {{ACM}},
	year = {2021},
	url = {https://doi.org/10.1145/3448016.3457257},
