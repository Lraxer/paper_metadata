	editor = {Guoliang Li and
                  Zhanhuai Li and
                  Stratos Idreos and
                  Divesh Srivastava},
	title = {{SOFOS:} Demonstrating the Challenges of Materialized View Selection
                  on Knowledge Graphs},
	booktitle = {{SIGMOD} '21: International Conference on Management of Data, Virtual
                  Event, China, June 20-25, 2021},
	pages = {2789--2793},
	publisher = {{ACM}},
