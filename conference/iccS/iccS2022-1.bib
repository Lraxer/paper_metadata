	title = {Classifying Anomalous Members in a Collection of Multivariate Time
                  Series Data Using Large Deviations Principle: An Application to {COVID-19}
                  Data},
	booktitle = {Computational Science - {ICCS} 2022 - 22nd International Conference,
                  London, UK, June 21-23, 2022, Proceedings, Part {I}},
	series = {Lecture Notes in Computer Science},
	volume = {13350},
	pages = {133--149},
	publisher = {Springer},
	year = {2022},
