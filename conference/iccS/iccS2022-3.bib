	title = {Patient- and Ventilator-Specific Modeling to Drive the Use and Development
                  of 3D Printed Devices for Rapid Ventilator Splitting During the {COVID-19}
                  Pandemic},
	booktitle = {Computational Science - {ICCS} 2022 - 22nd International Conference,
                  London, UK, June 21-23, 2022, Proceedings, Part {III}},
	series = {Lecture Notes in Computer Science},
	volume = {13352},
	pages = {137--149},
	publisher = {Springer},
	year = {2022},
