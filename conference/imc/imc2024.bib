	title = {DarkSim: {A} similarity-based time-series analytic framework for darknet
                  traffic},
	booktitle = {Proceedings of the 2024 {ACM} on Internet Measurement Conference,
                  {IMC} 2024, Madrid, Spain, November 4-6, 2024},
	pages = {241--258},
	publisher = {{ACM}},
	year = {2024},
	url = {https://doi.org/10.1145/3646547.3688426},
	doi = {10.1145/3646547.3688426},
