	title = {Self-Supervised Fine-Tuning of Automatic Speech Recognition Systems
                  against Signal Processing Attacks},
	booktitle = {Proceedings of the 19th {ACM} Asia Conference on Computer and Communications
                  Security, {ASIA} {CCS} 2024, Singapore, July 1-5, 2024},
	publisher = {{ACM}},
	year = {2024},
	url = {https://doi.org/10.1145/3634737.3645013},
