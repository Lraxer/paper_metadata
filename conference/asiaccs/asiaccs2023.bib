	title = {{T-TER:} Defeating {A2} Trojans with Targeted Tamper-Evident Routing},
	booktitle = {Proceedings of the 2023 {ACM} Asia Conference on Computer and Communications
                  Security, {ASIA} {CCS} 2023, Melbourne, VIC, Australia, July 10-14,
                  2023},
	pages = {746--759},
	publisher = {{ACM}},
	year = {2023},
	url = {https://doi.org/10.1145/3579856.3582837},
