	title = {A Multi-Graph Attributed Reinforcement Learning based Optimization
                  Algorithm for Large-scale Hybrid Flow Shop Scheduling Problem},
	booktitle = {{KDD} '21: The 27th {ACM} {SIGKDD} Conference on Knowledge Discovery
                  and Data Mining, Virtual Event, Singapore, August 14-18, 2021},
	pages = {3441--3451},
