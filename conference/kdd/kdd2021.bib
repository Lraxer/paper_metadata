                  Xiaofeng He and
                  Hongyuan Zha},
	editor = {Feida Zhu and
                  Beng Chin Ooi and
                  Chunyan Miao},
	title = {{HMRL:} Hyper-Meta Learning for Sparse Reward Reinforcement Learning
                  Problem},
	booktitle = {{KDD} '21: The 27th {ACM} {SIGKDD} Conference on Knowledge Discovery
                  and Data Mining, Virtual Event, Singapore, August 14-18, 2021},
	pages = {637--645},
	publisher = {{ACM}},
