	title = {Federated Adversarial Debiasing for Fair and Transferable Representations},
	booktitle = {{KDD} '21: The 27th {ACM} {SIGKDD} Conference on Knowledge Discovery
                  and Data Mining, Virtual Event, Singapore, August 14-18, 2021},
	pages = {617--627},
	publisher = {{ACM}},
	year = {2021},
	url = {https://doi.org/10.1145/3447548.3467281},
	doi = {10.1145/3447548.3467281},
