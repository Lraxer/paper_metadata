	title = {Task-wise Split Gradient Boosting Trees for Multi-center Diabetes
                  Prediction},
	booktitle = {{KDD} '21: The 27th {ACM} {SIGKDD} Conference on Knowledge Discovery
                  and Data Mining, Virtual Event, Singapore, August 14-18, 2021},
	pages = {2663--2673},
	publisher = {{ACM}},
	year = {2021},
	url = {https://doi.org/10.1145/3447548.3467123},
	doi = {10.1145/3447548.3467123},
