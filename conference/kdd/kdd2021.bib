	title = {{SSML:} Self-Supervised Meta-Learner for En Route Travel Time Estimation
                  at Baidu Maps},
	booktitle = {{KDD} '21: The 27th {ACM} {SIGKDD} Conference on Knowledge Discovery
                  and Data Mining, Virtual Event, Singapore, August 14-18, 2021},
	pages = {2840--2848},
	publisher = {{ACM}},
	year = {2021},
	url = {https://doi.org/10.1145/3447548.3467060},
	doi = {10.1145/3447548.3467060},
