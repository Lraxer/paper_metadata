                  Huan Sun and
                  Muhao Chen},
	editor = {Feida Zhu and
                  Beng Chin Ooi and
                  Chunyan Miao},
	title = {From Tables to Knowledge: Recent Advances in Table Understanding},
	booktitle = {{KDD} '21: The 27th {ACM} {SIGKDD} Conference on Knowledge Discovery
                  and Data Mining, Virtual Event, Singapore, August 14-18, 2021},
	pages = {4060--4061},
	publisher = {{ACM}},
