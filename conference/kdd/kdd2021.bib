                  Jaewon Yang},
	editor = {Feida Zhu and
                  Beng Chin Ooi and
                  Chunyan Miao},
	title = {Performance-Adaptive Sampling Strategy Towards Fast and Accurate Graph
                  Neural Networks},
	booktitle = {{KDD} '21: The 27th {ACM} {SIGKDD} Conference on Knowledge Discovery
                  and Data Mining, Virtual Event, Singapore, August 14-18, 2021},
	pages = {2046--2056},
	publisher = {{ACM}},
	year = {2021},
	url = {https://doi.org/10.1145/3447548.3467284},
	doi = {10.1145/3447548.3467284},
