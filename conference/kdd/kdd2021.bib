	title = {Leveraging Tripartite Interaction Information from Live Stream E-Commerce
                  for Improving Product Recommendation},
	booktitle = {{KDD} '21: The 27th {ACM} {SIGKDD} Conference on Knowledge Discovery
                  and Data Mining, Virtual Event, Singapore, August 14-18, 2021},
	pages = {3886--3894},
	publisher = {{ACM}},
	year = {2021},
	url = {https://doi.org/10.1145/3447548.3467151},
	doi = {10.1145/3447548.3467151},
