	title = {Learning Reliable User Representations from Volatile and Sparse Data
                  to Accurately Predict Customer Lifetime Value},
	booktitle = {{KDD} '21: The 27th {ACM} {SIGKDD} Conference on Knowledge Discovery
                  and Data Mining, Virtual Event, Singapore, August 14-18, 2021},
	pages = {3806--3816},
