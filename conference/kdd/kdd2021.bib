	title = {Diet Planning with Machine Learning: Teacher-forced {REINFORCE} for
                  Composition Compliance with Nutrition Enhancement},
	booktitle = {{KDD} '21: The 27th {ACM} {SIGKDD} Conference on Knowledge Discovery
                  and Data Mining, Virtual Event, Singapore, August 14-18, 2021},
	pages = {3150--3160},
	publisher = {{ACM}},
	year = {2021},
	url = {https://doi.org/10.1145/3447548.3467201},
	doi = {10.1145/3447548.3467201},
