	title = {Multivariate Time Series Anomaly Detection and Interpretation using
                  Hierarchical Inter-Metric and Temporal Embedding},
	booktitle = {{KDD} '21: The 27th {ACM} {SIGKDD} Conference on Knowledge Discovery
                  and Data Mining, Virtual Event, Singapore, August 14-18, 2021},
	pages = {3220--3230},
