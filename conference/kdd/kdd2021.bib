	title = {{DMBGN:} Deep Multi-Behavior Graph Networks for Voucher Redemption
                  Rate Prediction},
	booktitle = {{KDD} '21: The 27th {ACM} {SIGKDD} Conference on Knowledge Discovery
                  and Data Mining, Virtual Event, Singapore, August 14-18, 2021},
	pages = {3786--3794},
	publisher = {{ACM}},
	year = {2021},
	url = {https://doi.org/10.1145/3447548.3467191},
	doi = {10.1145/3447548.3467191},
