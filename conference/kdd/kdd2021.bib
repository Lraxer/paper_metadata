	title = {Clockwork: {A} Delay-Based Global Scheduling Framework for More Consistent
                  Landing Times in the Data Warehouse},
	booktitle = {{KDD} '21: The 27th {ACM} {SIGKDD} Conference on Knowledge Discovery
                  and Data Mining, Virtual Event, Singapore, August 14-18, 2021},
	pages = {3627--3637},
	publisher = {{ACM}},
	year = {2021},
	url = {https://doi.org/10.1145/3447548.3467119},
	doi = {10.1145/3447548.3467119},
