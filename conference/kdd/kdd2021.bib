	title = {Lane Change Scheduling for Autonomous Vehicle: {A} Prediction-and-Search
                  Framework},
	booktitle = {{KDD} '21: The 27th {ACM} {SIGKDD} Conference on Knowledge Discovery
                  and Data Mining, Virtual Event, Singapore, August 14-18, 2021},
	pages = {3343--3353},
	publisher = {{ACM}},
	year = {2021},
	url = {https://doi.org/10.1145/3447548.3467072},
	doi = {10.1145/3447548.3467072},
