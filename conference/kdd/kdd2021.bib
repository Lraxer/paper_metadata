                  Claudia Plant},
	editor = {Feida Zhu and
                  Beng Chin Ooi and
                  Chunyan Miao},
	title = {Spectral Clustering of Attributed Multi-relational Graphs},
	booktitle = {{KDD} '21: The 27th {ACM} {SIGKDD} Conference on Knowledge Discovery
                  and Data Mining, Virtual Event, Singapore, August 14-18, 2021},
	pages = {1431--1440},
	publisher = {{ACM}},
	year = {2021},
	url = {https://doi.org/10.1145/3447548.3467381},
