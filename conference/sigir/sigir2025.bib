	title = {Adaptive Orchestration of Modular Generative Information Access Systems},
	booktitle = {Proceedings of the 48th International {ACM} {SIGIR} Conference on
                  Research and Development in Information Retrieval, {SIGIR} 2025, Padua,
                  Italy, July 13-18, 2025},
	pages = {3899--3910},
	publisher = {{ACM}},
	year = {2025},
	url = {https://doi.org/10.1145/3726302.3730351},
	doi = {10.1145/3726302.3730351},
