	title = {Grasp the Key Takeaways from Source Domain for Few Shot Graph Domain
                  Adaptation},
	booktitle = {Proceedings of the {ACM} on Web Conference 2025, {WWW} 2025, Sydney,
                  NSW, Australia, 28 April 2025- 2 May 2025},
	pages = {2330--2340},
	publisher = {{ACM}},
