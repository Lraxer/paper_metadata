	title = {Towards Safe Machine Unlearning: {A} Paradigm that Mitigates Performance
                  Degradation},
	booktitle = {Proceedings of the {ACM} on Web Conference 2025, {WWW} 2025, Sydney,
                  NSW, Australia, 28 April 2025- 2 May 2025},
	pages = {4635--4652},
	publisher = {{ACM}},
