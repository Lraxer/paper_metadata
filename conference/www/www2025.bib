	title = {Efficient and Practical Approximation Algorithms for Advertising in
                  Content Feeds},
	booktitle = {Proceedings of the {ACM} on Web Conference 2025, {WWW} 2025, Sydney,
                  NSW, Australia, 28 April 2025- 2 May 2025},
	pages = {3193--3203},
	publisher = {{ACM}},
