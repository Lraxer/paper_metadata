	title = {Joint Optimal Transport and Embedding for Network Alignment},
	booktitle = {Proceedings of the {ACM} on Web Conference 2025, {WWW} 2025, Sydney,
                  NSW, Australia, 28 April 2025- 2 May 2025},
	pages = {2064--2075},
	publisher = {{ACM}},
