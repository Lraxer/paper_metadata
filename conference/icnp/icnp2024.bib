	title = {Rina: Enhancing Ring-Allreduce with in-Network Aggregation in Distributed
                  Model Training},
	booktitle = {32nd {IEEE} International Conference on Network Protocols, {ICNP}
                  2024, Charleroi, Belgium, October 28-31, 2024},
	pages = {1--12},
	publisher = {{IEEE}},
	year = {2024},
	url = {https://doi.org/10.1109/ICNP61940.2024.10858570},
