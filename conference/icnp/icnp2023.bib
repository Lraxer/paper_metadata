}


@inproceedings{DBLP:conf/icnp/Dynerowicz23,
	author = {Seweryn Dynerowicz},
	title = {Poster: Maximal Rate Entanglement Swapping Schedules for Routing in
                  the Quantum Internet},
	booktitle = {31st {IEEE} International Conference on Network Protocols, {ICNP}
                  2023, Reykjavik, Iceland, October 10-13, 2023},
	pages = {1--2},
	publisher = {{IEEE}},
