	title = {{ARROW:} restoration-aware traffic engineering},
	booktitle = {{ACM} {SIGCOMM} 2021 Conference, Virtual Event, USA, August 23-27,
                  2021},
	pages = {560--579},
	publisher = {{ACM}},
	year = {2021},
