	title = {Anycast In context: a tale of two systems},
	booktitle = {{ACM} {SIGCOMM} 2021 Conference, Virtual Event, USA, August 23-27,
                  2021},
	pages = {398--417},
	publisher = {{ACM}},
	year = {2021},
	url = {https://doi.org/10.1145/3452296.3472891},
	doi = {10.1145/3452296.3472891},
