	title = {Concordia: teaching the 5G vRAN to share compute},
	booktitle = {{ACM} {SIGCOMM} 2021 Conference, Virtual Event, USA, August 23-27,
                  2021},
	pages = {580--596},
	publisher = {{ACM}},
	year = {2021},
	url = {https://doi.org/10.1145/3452296.3472894},
