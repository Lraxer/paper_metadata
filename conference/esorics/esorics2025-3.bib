@inproceedings{DBLP:conf/esorics/Gingupalli25,
	author = {Sarat Chandra Prasad Gingupalli},
	editor = {Vincent Nicomette and
                  Abdelmalek Benzekri and
                  Nora Boulahia{-}Cuppens and
                  Jaideep Vaidya},
	title = {Hardening {HSM} Clusters: Resolving Key Sync Vulnerabilities for Robust
                  {CU} Isolation},
	booktitle = {Computer Security - {ESORICS} 2025 - 30th European Symposium on Research
                  in Computer Security, Toulouse, France, September 22-24, 2025, Proceedings,
                  Part {III}},
	series = {Lecture Notes in Computer Science},
	volume = {16055},
	pages = {144--163},
	publisher = {Springer},
	year = {2025},
	url = {https://doi.org/10.1007/978-3-032-07894-0\_8},
	doi = {10.1007/978-3-032-07894-0\_8},
	timestamp = {Thu, 30 Oct 2025 10:40:56 +0100},
	biburl = {https://dblp.org/rec/conf/esorics/Gingupalli25.bib},
	bibsource = {dblp computer science bibliography, https://dblp.org},
	abstract = {This paper exposes critical vulnerabilities in key syncing within Hardware Security Module (HSM) clusters, revealing design flaws\xa0that bypass user authorization and make cluster objects accessible\xa0to anyone within the cluster. In an ideal HSM cluster, objects should be shared across partitions for availability, yet their usage\xa0must remain restricted to their creating user for security. However,\xa0when using the Partition Crypto Officer (PCO) for syncing, objects become cluster-shared, but encrypting them with a masking key—unique\xa0per partition yet accessible to all users of the partition—compromises the user-owned property. We demonstrate how this lack of\xa0user isolation can be exploited to extract sensitive information\xa0from clusters. The issue is further exacerbated by\xa0data encryption/decryption APIs that fail to enforce segregation between key-wrapping and data-encryption algorithms, exposing plaintext\xa0keys at the HSM boundary. To counter these threats, we propose two robust solutions: (1) a nonce-based approach, where the Hierarchical Deterministic (HD) wallet\xa0[3] is path-restricted per user, and users derive transport keys for masking objects using\xa0a combination of a nonce and the masking key; and (2)\xa0a public-key-based model, where each Crypto User (CU) in the HSM\xa0is assigned an independent key pair upon creation and uses\xa0this user-specific key pair to encrypt their respective objects in\xa0the cluster. Through detailed demonstrations, we illustrate how\xa0these approaches establish CU isolation in widely deployed cloud\xa0HSM clusters, effectively mitigating the identified vulnerabilities.}
}


