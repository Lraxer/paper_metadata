                  Pierangela Samarati},
	title = {Calibrating Learning Parity with Noise Authentication for Low-Resource
                  Devices},
	booktitle = {Information and Communications Security - 24th International Conference,
                  {ICICS} 2022, Canterbury, UK, September 5-8, 2022, Proceedings},
	series = {Lecture Notes in Computer Science},
	volume = {13407},
	pages = {19--36},
	publisher = {Springer},
	year = {2022},
	url = {https://doi.org/10.1007/978-3-031-15777-6\_2},
